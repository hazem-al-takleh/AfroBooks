@{
}

@model Company

<div class=" container col-6 align-middle">
    <div class="border p-4 mt-4 rounded">
        <div class="mb-3 row">
            <label class="col-3" asp-for="@Model.Name"></label>
            <h6 class="col-3">@Model.Name</h6>
        </div>
        <div class="mb-3 row">
            <label class="col-3" asp-for="@Model.StreetAddress"></label>
            <h6 class="col-3">@Model.StreetAddress</h6>
        </div>
        <div class="mb-3 row">
            <label class="col-3" asp-for="@Model.City"></label>
            <h6 class="col-3">@Model.City</h6>
        </div>
        <div class="mb-3 row">
            <label class="col-3" asp-for="@Model.PostalCode"></label>
            <h6 class="col-3">@Model.PostalCode</h6>
        </div>
    </div>
</div>