@{
}
@model IEnumerable<Company>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Companies List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            @*<th>Street Address</th>
            <th>City</th>
            <th>Posta lCode</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Company" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                </td>
                <td width="10%">
                    <a asp-controller="Company" asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary" style="width:fit-content">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:fit-content">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
