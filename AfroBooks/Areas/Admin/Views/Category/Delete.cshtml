@{
}
@model Category

<form method="post" asp-action="Delete">
    <div class=" container align-middle" style=" width:50%">
        <div class="border p-4 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Category</h2>
            </div>
            <div>
                <h3>Are you sure you wanna delete category @Model.Name?</h3>
            </div>
            <div class="container-fluid row pt-2">
                <button class="btn btn-danger mx-2 col width:50%" type="submit">Delete</button>
                <a class="btn btn-secondary mx-2 col width:50%" asp-controller="Category" asp-action="Index">Back to categories list</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
    }