@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td width="10%">
                    <a asp-controller="Category" asp-action="Update" asp-route-id="@item.ID" class="btn btn-secondary" style="width:fit-content">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger" style="width:fit-content">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

