@{
}
@model Category

<form method="post" asp-action="Update">
    <div class=" container align-middle" style=" width:50%">
        <div class="border p-4 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Category</h2>
            </div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder ="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" placeholder="@Model.DisplayOrder" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>

            </div>

            <div class="container-fluid row pt-2">
                <button class="btn btn-primary mx-2 col width:50%" type="submit">Update</button>
                <a class="btn btn-secondary mx-2 col width:50%" asp-controller="Category" asp-action="Index">Back to categories list</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
    }